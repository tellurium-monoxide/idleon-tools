{
    "editor.codeLens": false,
    "git.timeline.showAuthor": true,
    "git.decorations.enabled": false,
    "html.format.maxPreserveNewLines": 1,
    "html.format.wrapAttributes": "aligned-multiple",
    "html.format.wrapLineLength": 0,
    "editor.wordWrap": "on",
    "html.format.contentUnformatted": "pre,code,textarea",
    "outline.showBooleans": true,
    "outline.showArrays": true,
    "outline.showNumbers": true,
    "outline.showVariables": false,
    "[liquid-javascript]": {
        "editor.defaultFormatter": "sissel.shopify-liquid",
        "editor.formatOnSave": true
    },
    "liquid.completion.filters": false,
    "liquid.completion.objects": false,
    "liquid.completion.operators": false,
    "liquid.completion.properties": false,
    "liquid.completion.schema": false,
    "liquid.completion.sections": false,
    "liquid.completion.tags": false,
    "liquid.completion.variables": false,
    "liquid.config.method": "workspace",
    "liquid.engine": "jekyll",
    "emmet.includeLanguages": {
        "liquid-javascript": "js"
    },
